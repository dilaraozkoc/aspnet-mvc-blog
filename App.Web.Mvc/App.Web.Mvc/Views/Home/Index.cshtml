@using System.Globalization;
@model List<Product>

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
        </div>
    </div>
</header>

<!-- Section-->
<section class="py-5">

    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Sale badge-->
                        @if (@item.isSale)
                        {
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                        }
                        <!-- Product image-->
                        <img src="@item.ImageUrl" class="card-img-top">
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.Title</h5>
                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    @for (int i = 0; i < item.StarCount; i++)
                                    {
                                        <div class="bi-star-fill"></div>
                                    }
                                </div>
                                <!-- Product price-->
                                @if (item.OldPrice == 0)
                                {

                                    var minPrice = item.Price / 2;

                                    <p>  $ @minPrice.ToString(CultureInfo.CreateSpecificCulture("en-GB")) - $ @item.Price.ToString(CultureInfo.CreateSpecificCulture("en-GB"))</p>
                                }
                                else
                                {
                                    <span class="text-muted text-decoration-line-through"> $ @item.OldPrice.ToString(CultureInfo.CreateSpecificCulture("en-GB"))</span>
                                    <p> $ @item.Price.ToString(CultureInfo.CreateSpecificCulture("en-GB"))</p>
                                }


                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            @if (item.OldPrice != 0)
                            {
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                            }
                            else
                            {
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>